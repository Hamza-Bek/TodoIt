<div class="add-todo-container">
    <button @onclick="ToggleForm" class="add-todo-btn">
        ➕ Add Todo
    </button>
</div>

<div class="todo-form-wrapper @(showForm ? "show" : "hide")">
    <div class="todo-form">
        <input type="text" placeholder="Enter the todo here" class="todo-input" />
        <input type="text" placeholder="Description" class="todo-input" />

        <div class="form-row">     
            <div class="priority-indicators">
                <TodoItButton Color="Color.Default" Variant="Variant.Outlined" Size="Size.XSmall" Width="Width.Short">
                    Low
                </TodoItButton>
                <TodoItButton Color="Color.Default" Variant="Variant.Outlined" Size="Size.XSmall" Width="Width.Short">
                    Medium
                </TodoItButton>
                <TodoItButton Color="Color.Default" Variant="Variant.Outlined" Size="Size.XSmall" Width="Width.Short">
                    High
                </TodoItButton>
            </div>

            <div class="action-buttons">
                <TodoItButton Color="Color.Default" Variant="Variant.Outlined" Size="Size.Small" Width="Width.Wide">
                    Cancel
                </TodoItButton>
                <TodoItButton Color="Color.Primary" Variant="Variant.Filled" Size="Size.Small" Width="Width.UltraWide">
                    Confirm
                </TodoItButton>
            </div>
        </div>
    </div>
</div>


@code {
    private bool showForm = false;

    private void ToggleForm()
    {
        showForm = !showForm;
    }
} 