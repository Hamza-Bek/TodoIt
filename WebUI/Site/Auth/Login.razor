@page "/login"

<AuthForm TModel="LoginRequest" 
          Title="Login" 
          ButtonText="Login" 
          Model="loginModel"           
          OnSubmit="HandleLogin" />

@code {
    private LoginRequest loginModel = new();

    private void HandleLogin()
    {
        Console.WriteLine($"Login: {loginModel.Email}, {loginModel.Password}");
    }
}
